<div class="card shadow-sm p-4" style="max-width: 600px; margin: 0 auto;">
    <form asp-action="Create" method="post" onsubmit="return validateForm()">
        <div class="form-group mb-3">
            <label for="Name" class="form-label">Adı</label>
            <input asp-for="Name" class="form-control form-control-lg" placeholder="Çalışanın adını girin" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Expertise" class="form-label">Uzmanlık</label>
            <input asp-for="Expertise" class="form-control form-control-lg" placeholder="Çalışanın uzmanlık alanını girin" required />
            <span asp-validation-for="Expertise" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="SalonId" class="form-label">Salon</label>
            <select asp-for="SalonId" class="form-control form-control-lg" asp-items="ViewBag.Salons" required>
                <option value="">Salon Seçin</option>
            </select>
            <span asp-validation-for="SalonId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-lg w-100">Kaydet</button>
    </form>
</div>

<script>
    function validateForm() {
        var salonId = document.querySelector('[name="SalonId"]').value;
        if (!salonId) {
            alert('Bir salon seçmelisiniz.');
            return false; // Formu gönderme
        }
        return true; // Formu gönder
    }
</script>

