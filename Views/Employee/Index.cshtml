@model IEnumerable<BarberApp.Models.Employee>

@{
    ViewData["Title"] = "Çalışanlar";
}

<h2 class="text-center my-4">Çalışanlar</h2>

<div class="text-center mb-4">
    <a href="@Url.Action("Create", "Employee")" class="btn btn-success btn-lg">Yeni Çalışan Ekle</a>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Adı</th>
            <th>Uzmanlık Alanları</th>
            <th>Salon</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Expertise</td>
                <td>@employee.Salon.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Employee", new { id = employee.EmployeeId })" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="@Url.Action("Delete", "Employee", new { id = employee.EmployeeId })" class="btn btn-danger btn-sm" onclick="return confirm('Bu çalışanı silmek istediğinizden emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    /* Kart ve Kapsayıcı */
    .card {
        border-radius: 15px;
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
        padding: 20px;
        margin-bottom: 20px;
    }

    /* Tablo */
    .table {
        font-size: 1rem;
        border-radius: 8px;
        overflow: hidden;
        margin-top: 20px;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .table-hover tbody tr:hover {
        background-color: #f4f6fc;
        cursor: pointer;
    }

    .thead-light th {
        background-color: #e9ecef;
        color: #495057;
    }

    th, td {
        padding: 15px;
        text-align: left;
    }

    /* Uyarılar */
    .alert {
        margin-bottom: 20px;
        font-size: 1rem;
        border-radius: 5px;
    }

        .alert .close {
            padding: 0.8rem 1rem;
        }

    .alert-success {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
    }

    .alert-danger {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
    }

    /* Butonlar */
    .btn {
        font-size: 0.875rem;
        padding: 8px 16px;
        border-radius: 8px;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-sm {
        padding: 5px 10px;
    }
</style>