@model BarberApp.Models.RegisterViewModel

@{
    ViewData["Title"] = "Üye Ol";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4" style="max-width: 900px; width: 100%; border-radius: 15px;">
        <h2 class="text-center mb-4">Üye Ol</h2>

        <form asp-action="Register" method="post">
            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                <input asp-for="UserName" class="form-control form-control-lg" placeholder="Kullanıcı Adınızı Girin" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">E-posta</label>
                <input asp-for="Email" class="form-control form-control-lg" type="email" placeholder="E-posta Adresinizi Girin" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FullName" class="form-label">Ad Soyad</label>
                <input asp-for="FullName" class="form-control form-control-lg" placeholder="Adınızı ve Soyadınızı Girin" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for="Password" class="form-control form-control-lg" type="password" placeholder="Şifrenizi Girin" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ConfirmPassword" class="form-label">Şifreyi Onayla</label>
                <input asp-for="ConfirmPassword" class="form-control form-control-lg" type="password" placeholder="Şifrenizi Tekrar Girin" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100">Üye Ol</button>
        </form>

        <div class="text-center mt-4">
            <a href="@Url.Action("Login", "Account")" class="text-muted">Zaten hesabınız var mı? Giriş yapın.</a>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 50px;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
        padding: 40px;
        background-color: #ffffff;
    }

    .form-control-lg {
        font-size: 1.1rem;
        padding: 15px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 15px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 8px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .text-center a {
        font-size: 1rem;
        text-decoration: none;
        color: #007bff;
    }

        .text-center a:hover {
            text-decoration: underline;
        }

    .text-danger {
        font-size: 0.875rem;
    }
</style>
