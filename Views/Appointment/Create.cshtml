            <div class="form-check">
                @foreach (var service in ViewBag.Services)
                {
                    <div class="form-check">
                        <input type="checkbox" name="selectedServices" value="@service.ServiceId" class="form-check-input" />
                        <label class="form-check-label">@service.Name (@service.Price.ToString("C"))</label>
                    </div>
                }
            </div>
           @*  <span asp-validation-for="selectedServices" class="text-danger"></span> 
        </div> *@

        <button type="submit" class="btn btn-primary btn-lg w-100">Randevu Talep Et</button>
    </form>
</div>

<style>
    .card {
        border-radius: 15px;
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
    }

    .form-control-lg {
        font-size: 1.1rem;
        padding: 15px;
        border-radius: 8px;
    }

    .form-group label {
        font-weight: 600;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 15px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .form-check-input {
        margin-right: 10px;
    }

    .alert {
        margin-bottom: 20px;
        font-size: 1rem;
    }

        .alert .close {
            padding: 0.8rem 1rem;
        }

    .alert-success {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
    }

    .alert-danger {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
    }
</style>
