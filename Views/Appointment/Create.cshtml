<div class="card shadow-sm p-4" style="max-width: 600px; margin: 0 auto;">
    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label for="AppointmentDate" class="form-label">Randevu Tarihi</label>
            <input type="datetime-local" asp-for="AppointmentDate" class="form-control form-control-lg" required />
            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="EmployeeId" class="form-label">Çalışan Seç</label>
            <select asp-for="EmployeeId" class="form-control form-control-lg" required>
                <option value="">Çalışan Seçin</option>
                @foreach (var employee in ViewBag.Employees)
                {
                    <option value="@employee.EmployeeId">@employee.Name</option>
                }
            </select>
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="TotalPrice" class="form-label">Ücret</label>
            <input type="number" asp-for="TotalPrice" class="form-control form-control-lg" required />
            <span asp-validation-for="TotalPrice" class="text-danger"></span>
        </div>
@*         <div class="form-group mb-3">
