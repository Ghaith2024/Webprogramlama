@{
    ViewData["Title"] = "Kullanıcı Paneli";
}

<h2 class="text-center my-4">Kullanıcı Paneli</h2>

<p class="text-center mb-5">Randevu almak veya mevcut randevularınızı görüntülemek için aşağıdaki işlemleri gerçekleştirebilirsiniz:</p>

<div class="container">
    <div class="row text-center">
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg border-light rounded">
                <div class="card-body">
                    <h5 class="card-title">Randevu Al</h5>
                    <p class="card-text">Yeni bir randevu oluşturmak için bu bölümü kullanabilirsiniz.</p>
                    <a href="@Url.Action("Create", "Appointment")" class="btn btn-primary">Randevu Al</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-lg border-light rounded">
                <div class="card-body">
                    <h5 class="card-title">Randevularım</h5>
                    <p class="card-text">Mevcut randevularınızı görüntüleyebilir ve detaylarını inceleyebilirsiniz.</p>
                    <a href="@Url.Action("MyAppointments", "Appointment")" class="btn btn-primary">Randevularımı Gör</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
        }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #333;
    }

    .card-text {
        font-size: 1rem;
        color: #666;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px;
        font-size: 1rem;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>
