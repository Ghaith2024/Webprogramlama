@{
    ViewData["Title"] = "Admin Paneli";
}

<h2 class="text-center my-4">Admin Paneli</h2>

<p class="text-center mb-5">Admin olarak aşağıdaki işlemleri gerçekleştirebilirsiniz:</p>

<div class="container">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-light rounded">
                <div class="card-body">
                    <h5 class="card-title">Salon Yönetimi</h5>
                    <p class="card-text">Salonu yönetebilir, ekleme, düzenleme ve silme işlemlerini gerçekleştirebilirsiniz.</p>
                    <a href="@Url.Action("Index", "Salon")" class="btn btn-primary">Yönet</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-light rounded">
                <div class="card-body">
                    <h5 class="card-title">Çalışan Yönetimi</h5>
                    <p class="card-text">Çalışanları ekleyebilir, düzenleyebilir ve çıkarabilirsiniz.</p>
                    <a href="@Url.Action("Index", "Employee")" class="btn btn-primary">Yönet</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-light rounded">
                <div class="card-body">
                    <h5 class="card-title">Randevu Yönetimi</h5>
                    <p class="card-text">Randevuları yönetebilir, onaylayabilir veya iptal edebilirsiniz.</p>
                    <a href="@Url.Action("Index", "Appointment")" class="btn btn-primary">Yönet</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
        }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #333;
    }

    .card-text {
        font-size: 1rem;
        color: #666;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px;
        font-size: 1rem;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>